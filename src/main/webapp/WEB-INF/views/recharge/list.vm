#set($page_title="充值记录")
#set($body_name="充值记录列表")

<div class="widget-body  am-fr">
    <div class="am-u-sm-12 am-u-md-6 am-u-lg-6">
        <div class="am-form-group"></div>
    </div>
    <div class="am-u-sm-12 am-u-md-6 am-u-lg-3">
        <div class="am-form-group tpl-table-list-select">
        </div>
    </div>
    <div class="am-u-sm-12">
        <table width="100%" class="am-table am-table-compact am-table-striped tpl-table-black ">
            <thead>
            <tr>
                <th>序号</th>
                <th>用户编号</th>
                <th>充值金额</th>
                <th>账户余额</th>
                <th>充值时间</th>
            </tr>
            </thead>
            <tbody>
            #foreach(${recharges} in ${pageRecharges} )
                <tr class="gradeX">
                    <td class="am-text-middle">${recharges.rechargeId}</td>
                    <td class="am-text-middle">${recharges.userId}</td>
                    <td class="am-text-middle">${recharges.rechargeAmount}</td>
                    <td class="am-text-middle">${recharges.remaining}</td>
                    <td class="am-text-middle">
                        $!date.format('yyyy-MM-dd HH:mm:ss ',$!{recharges.rechargeTime})
                    </td>
                </tr>
            #end
            </tbody>
        </table>
    </div>
    #if(${pagePoint})
        <div class="am-u-lg-12 am-cf" style="font-size:14px;">
            <div class="am-fr">
                <ul class="am-pagination tpl-pagination">
                    #set($pre = ${pagePoint} - 1)
                    <li><a href="/recharge/admin-recharge-list-show?page=${pre}">«</a></li>
                    <li><a>当前第${pagePoint}页(共${pageMax}页)</a></li>
                    <li><a href="#!" id="skipBtn"> 跳转到&nbsp;<input type="text" name="pagePoint" style="width:20px;height: 14px; color:black; font-size: 10px;">&nbsp;页</a></li>
                    #set($left = ${pagePoint} + 1)
                    <li><a href="/recharge/admin-recharge-list-show?page=${left}">»</a></li>
                </ul>
            </div>
        </div>
    #end
</div>
<script src="/static/js/amazeui.min.js"></script>
<script src="/static/js/app.js"></script>

<script type="text/javascript">
    $(function(){
        $("#skipBtn").on("click",function(){
            var page = $("#skipBtn>input").val();
            if(page == ""){
                page = 1;
            }
            window.location = "/recharge/admin-recharge-list-show?page=" + page;
        });
        $("#skipBtn > input").on("click", function() {
            return false;
        });
    })
</script>
</body>

</html>