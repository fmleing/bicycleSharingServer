#set($page_title="用户反馈列表")
#set($body_name="用户反馈列表")

<div class="widget-body  am-fr">
    <div class="am-u-sm-12 am-u-md-6 am-u-lg-3">
        <div class="am-form-group tpl-table-list-select">
        </div>
    </div>
    <div class="am-u-sm-12">
        <table width="100%" class="am-table am-table-compact am-table-striped tpl-table-black ">
            <thead>
            <tr>
                <th>用户反馈标题</th>
                <th>用户反馈内容</th>
                <th>单车编号</th>
                <th>反馈时间</th>
                <th>反馈状态</th>
                <th>修改状态</th>
            </tr>
            </thead>
            <tbody>
            #foreach(${userFeedback} in ${pageUserFeedbacks})
                <td class="am-text-middle">${userFeedback.feedbackTitle}</td>
                <td class="am-text-middle">${userFeedback.feedbackContent}</td>
                <td class="am-text-middle">${userFeedback.bicycleId}</td>
                <td class="am-text-middle">
                    $!date.format('yyyy-MM-dd HH:mm:ss ',$!{userFeedback.feedbackTime})
                </td>
                <td class="am-text-middle">${userFeedback.feedbackStatement}</td>
                <td class="am-text-middle">
                    <div class="tpl-table-black-operation">
                        <a href="/userfeadback/admin-userFeedback-resolved-execute/${userFeedback.feedbackId}">
                            <i class="am-icon-book"></i> 已读
                        </a>
                        <a href="/userfeadback/admin-userFeedback-removeuser-execute/${userFeedback.feedbackId}"
                           class="tpl-table-black-operation-del">
                            <i class="am-icon-trash"></i> 删除
                        </a>
                    </div>
                </td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
    #if($pagePoint)
        <div class="am-u-lg-12 am-cf" style="font-size:14px;">
            <div class="am-fr">
                <ul class="am-pagination tpl-pagination">
                    #set( $pre = ${pagePoint} - 1 )
                    <li><a href="/userfeadback/admin-feedback-list-show?page=${pre}">«</a></li>
                    <li><a>当前第${pagePoint}页(共${pageMax}页)</a></li>
                    <li><a href="#!" id="skipBtn"> 跳转到&nbsp;<input type="text" name="pagePoint" style="width:20px;height: 14px; color:black; font-size: 10px;">&nbsp;页</a></li>
                    #set( $left = ${pagePoint}+1)
                    <li><a href="/userfeadback/admin-feedback-list-show?page=${left}">»</a></li>
                </ul>
            </div>
        </div>
    #end
</div>

<script src="/static/js/theme.js"></script>
<script src="/static/js/amazeui.min.js"></script>
<script src="/static/js/app.js"></script>
<script type="text/javascript">
    $("#skipBtn").on("click", function() {
        var point = $("#skipBtn input").val();
        if (point == "") {
            return false;
        }
        var url = "/userfeadback/admin-feedback-list-show?page=" + point;
        window.location = url;
        return false;
    })
    $("#skipBtn input").on("click", function() {
        return false;
    })
</script>
</body>

</html>
